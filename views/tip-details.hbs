<div class="tips__details">
    <div class="tips__details__description">
        <div class="tips__details__description__hero">
        <h1>{{tip.name}}</h1>
        <ul>
            <li>{{tip.category}}</li>
        </ul>
        </div>
        <hr>
        <div class="tips__details__description__info">
            <div class="tips__details__description__review">
                <div class="tips__details__author">
                    <img src="../img/user-1.svg" alt="" class="tips__details__author__avatar">
                    <h3>Tip by {{tip.author.name}}</h3>
                </div>
                <p>{{tip.description}}</p>
                <a href="{{tip.website}}" class="tips__details__description__link">Link to {{tip.name}}'s website</a>
            </div>
            <div class="tips__details__description__openinghours">
                <h3>Opening hours</h3>
                <p>Monday: 09.00 - 18.00 <br>Tuesday: 09.00 - 18.00 <br>Wednesday: 09.00 - 18.00 <br>Thursday: 09.00 -
                    18.00
                    <br>Friday: 09.00 - 18.00 <br>Saturday: 09.00 - 18.00 <br>Sunday: 09.00 - 18.00
                </p>
            </div>
        </div>
    </div>
    <div class="tips__details__address">

        <h3>Address</h3>
        <p>{{tip.address}}
        </p>
        <iframe
            src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d19487.29856972378!2d4.87439210614361!3d52.37200982546475!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x2350add49ed44db0!2sPad%20Thai%20World!5e0!3m2!1sen!2snl!4v1586000747241!5m2!1sen!2snl"
            width="600" height="450" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false"
            tabindex="0"></iframe>
    </div>
</div>