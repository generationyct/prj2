<div class="login">
  <div class="login__msg"></div>
  <div class="login__form">
    <p>Welcome to Iron Food!</p>
    <p>Create an account to post your own food tips.</p>
    <form action="/login" method="POST">
      <input type="text" name="name" id="" placeholder="Your full name">
      <input type="text" name="email" id="" placeholder="Your e-mail">
      <input type="text" name="password" id="" placeholder="Password">
            <input type="text" name="confirm-password" id="" placeholder="Confirm password">

      <button id="btn-submit" type="submit">Create account</button>
    </form>
  </div>
</div>